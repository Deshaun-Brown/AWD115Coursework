@model Part
@{
    ViewData["Title"] = "Delete Part";
}

<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <header class="py-10">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Delete Part</h1>
    </header>

    <main>
        <div class="py-6">
            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Confirm Deletion</h3>
                        <p class="mt-2 text-sm text-red-700">
                            Are you sure you want to delete this part? This action cannot be undone.
                        </p>
                    </div>
                </div>
            </div>

            <div class="overflow-hidden bg-white shadow ring-1 ring-gray-200 rounded-lg">
                <div class="px-4 py-5 sm:px-6 bg-gray-50">
                    <h3 class="text-lg font-semibold text-gray-900">Part Details</h3>
                </div>
                <div class="border-t border-gray-200">
                    <dl class="divide-y divide-gray-200">
                        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-700">NIIN</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">@Model.NIIN</dd>
                        </div>
                        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 bg-gray-50">
                            <dt class="text-sm font-medium text-gray-700">Part Name</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">@Model.PartName</dd>
                        </div>
                        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-700">Manufacturer</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">@Model.Manufacturer</dd>
                        </div>
                        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 bg-gray-50">
                            <dt class="text-sm font-medium text-gray-700">Quantity In Stock</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">@Model.QuantityInStock</dd>
                        </div>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-6">
                <input type="hidden" asp-for="Id" />
                <div class="flex gap-3">
                    <button type="submit" class="inline-flex justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-700 focus:outline-2 focus:outline-offset-2 focus:outline-red-600">
                        Delete Part
                    </button>
                    <a asp-action="Index" class="inline-flex justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </main>
</div>