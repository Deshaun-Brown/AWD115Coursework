@{
    ViewData["Title"] = "Home";
}

<!-- Navigation -->
<nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
            <div class="flex items-center">
                <span class="font-orbitron text-2xl font-bold text-blue-600">✈️ AircraftParts</span>
            </div>
            <div class="flex items-center space-x-4">
                <a href="/parts/" class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium">Browse Parts</a>
                <a href="/parts/" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700">Get Started</a>
            </div>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
        <div class="text-center">
            <h1 class="font-orbitron caret text-5xl md:text-6xl font-bold mb-6">
                Precision Aircraft Parts
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
                Your trusted source for certified aviation components. Quality, reliability, and safety in every part.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/parts/" class="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition shadow-lg">
                    Browse Catalog
                </a>
                <a href="#features" class="bg-blue-500 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-400 transition border-2 border-white">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="bg-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
            <div>
                <div class="text-4xl font-bold text-blue-600">10,000+</div>
                <div class="text-gray-600 mt-2">Parts Available</div>
            </div>
            <div>
                <div class="text-4xl font-bold text-blue-600">FAA</div>
                <div class="text-gray-600 mt-2">Certified</div>
            </div>
            <div>
                <div class="text-4xl font-bold text-blue-600">24/7</div>
                <div class="text-gray-600 mt-2">Support</div>
            </div>
            <div>
                <div class="text-4xl font-bold text-blue-600">50+</div>
                <div class="text-gray-600 mt-2">Years Experience</div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Choose Us</h2>
            <p class="text-xl text-gray-600">Industry-leading solutions for all your aircraft parts needs</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition">
                <div class="text-blue-600 text-5xl mb-4">✓</div>
                <h3 class="text-2xl font-bold mb-3">Quality Assured</h3>
                <p class="text-gray-600">
                    Every part is rigorously tested and certified to meet or exceed FAA standards. Complete traceability and documentation.
                </p>
            </div>
            
            <!-- Feature 2 -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition">
                <div class="text-blue-600 text-5xl mb-4">⚡</div>
                <h3 class="text-2xl font-bold mb-3">Fast Delivery</h3>
                <p class="text-gray-600">
                    Global shipping with expedited options. AOG (Aircraft On Ground) emergency support available 24/7.
                </p>
            </div>
            
            <!-- Feature 3 -->
            <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition">
                <div class="text-blue-600 text-5xl mb-4">🔧</div>
                <h3 class="text-2xl font-bold mb-3">Expert Support</h3>
                <p class="text-gray-600">
                    Our aviation specialists are here to help you find the exact parts you need with technical assistance.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Part Categories</h2>
            <p class="text-xl text-gray-600">Browse our extensive inventory</p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-lg text-center hover:from-blue-600 hover:to-blue-700 transition cursor-pointer">
                <div class="text-3xl mb-2">⚙️</div>
                <h4 class="font-semibold">Engine Parts</h4>
            </div>
            <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 text-white p-6 rounded-lg text-center hover:from-indigo-600 hover:to-indigo-700 transition cursor-pointer">
                <div class="text-3xl mb-2">🔩</div>
                <h4 class="font-semibold">Fasteners</h4>
            </div>
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white p-6 rounded-lg text-center hover:from-blue-600 hover:to-blue-700 transition cursor-pointer">
                <div class="text-3xl mb-2">📡</div>
                <h4 class="font-semibold">Avionics</h4>
            </div>
            <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 text-white p-6 rounded-lg text-center hover:from-indigo-600 hover:to-indigo-700 transition cursor-pointer">
                <div class="text-3xl mb-2">🛠️</div>
                <h4 class="font-semibold">Hardware</h4>
            </div>
        </div>
        
        <div class="text-center mt-12">
            <a href="/parts/" class="inline-block bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition shadow-lg">
                View All Parts →
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Get Started?</h2>
        <p class="text-xl mb-8 text-blue-100">Browse our catalog or contact our team for assistance</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/parts/" class="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition">
                Browse Catalog
            </a>
            <a href="mailto:support@aircraftparts.com" class="bg-blue-500 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-400 transition border-2 border-white">
                Contact Sales
            </a>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="bg-gray-900 text-gray-300 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-white text-lg font-bold mb-4">✈️ AircraftParts</h3>
                <p class="text-sm">Your trusted source for certified aviation components since 1975.</p>
            </div>
            <div>
                <h4 class="text-white font-semibold mb-4">Quick Links</h4>
                <ul class="space-y-2 text-sm">
                    <li><a href="/parts/" class="hover:text-white">Browse Parts</a></li>
                    <li><a href="#" class="hover:text-white">About Us</a></li>
                    <li><a href="#" class="hover:text-white">Certifications</a></li>
                </ul>
            </div>
            <div>
                <h4 class="text-white font-semibold mb-4">Contact</h4>
                <ul class="space-y-2 text-sm">
                    <li>📞 1-800-AIRCRAFT</li>
                    <li>✉️ parts@aircraftparts.com</li>
                    <li>📍 Aviation Plaza, Hangar 7</li>
                </ul>
            </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm">
            <p>&copy; @DateTime.Now.Year Aircraft Parts App. All rights reserved. | FAA Certified Supplier</p>
        </div>
    </div>
