@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 class="text-2xl font-semibold">@ViewData["Log out"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="mt-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="inline-flex items-center justify-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-900 focus:ring-offset-2">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="mt-4 text-slate-700">You have successfully logged out of the application.</p>
        }
    }
</header>
