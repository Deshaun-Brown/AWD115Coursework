@{
    ViewData["Title"] = "Home";
}

<div class="mx-auto max-w-3xl">
    <div class="rounded-xl border border-slate-200 bg-white p-8">
        <h1 class="text-3xl font-semibold tracking-tight">Fitness Tracker</h1>
        <p class="mt-3 text-slate-600">
            Manage your fitness store products with a simple MVC CRUD interface.
        </p>

        <div class="mt-6 flex flex-col gap-3 sm:flex-row">
            <a asp-controller="Product" asp-action="Index"
               class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-700">
                View Products
            </a>

            <a asp-controller="Product" asp-action="Create"
               class="inline-flex items-center justify-center rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50">
                Add a Product
            </a>
        </div>
    </div>
</div>