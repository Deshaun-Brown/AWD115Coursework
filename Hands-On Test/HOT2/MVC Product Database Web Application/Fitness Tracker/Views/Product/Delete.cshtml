@model Fitness_Tracker.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="mx-auto max-w-2xl">
    <div class="rounded-xl border border-slate-200 bg-white">
        <div class="border-b border-slate-200 px-6 py-4">
            <h1 class="text-lg font-semibold">Confirm Delete</h1>
            <p class="mt-1 text-sm text-slate-600">This action cannot be undone.</p>
        </div>

        <div class="px-6 py-6">
            <div class="rounded-lg border border-rose-200 bg-rose-50 p-4">
                <div class="font-medium text-rose-900">@Model.Name</div>
                <div class="mt-1 text-sm text-rose-800">@Model.Description</div>
            </div>

            <div class="mt-6 flex items-center justify-end gap-2">
                <a asp-action="Index" class="rounded-md px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100">
                    Cancel
                </a>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <button type="submit" class="rounded-md bg-rose-600 px-4 py-2 text-sm font-medium text-white hover:bg-rose-700">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>