@model Chapter_2_Lab.Models.PriceQuote

@{
    ViewData["Title"] = "Price Quotations";
}

<h2 class="text-3xl font-bold text-blue-600 mb-4">Price Quotation</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
}

<form asp-action="Index" method="post" class="space-y-4 p-6 bg-gray-100 rounded-lg shadow">
    <div>
        <label asp-for="Subtotal" class="block font-semibold mb-1">Subtotal:</label>
        <input asp-for="Subtotal" class="border border-gray-300 p-2 rounded w-full focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Subtotal" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="DiscountPercent" class="block font-semibold mb-1">Discount Percent:</label>
        <input asp-for="DiscountPercent" class="border border-gray-300 p-2 rounded w-full focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="DiscountPercent" class="text-red-600 text-sm"></span>
    </div>

    <div class="bg-white p-4 rounded border border-gray-300">
        <label class="block font-semibold mb-1">Discount Amount:</label>
        <span class="text-green-600 font-bold text-xl">$@Model.DiscountAmount.ToString("F2")</span>
    </div>

    <div class="bg-white p-4 rounded border border-gray-300">
        <label class="block font-semibold mb-1">Total:</label>
        <span class="text-green-600 font-bold text-xl">$@Model.Total.ToString("F2")</span>
    </div>

    <div class="flex gap-4">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-semibold transition">
            Calculate
        </button>
        <a asp-action="Clear" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded font-semibold inline-block transition">
            Clear
        </a>
    </div>
</form>