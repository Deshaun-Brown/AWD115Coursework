@model Project.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="bg-gray-800 text-white py-8 mb-8">
    <div class="max-w-7xl mx-auto px-4">
        <h1 class="text-4xl font-bold text-center">Contact Manager</h1>
    </div>
</div>

<div class="max-w-2xl mx-auto px-4 mb-8">
    <div class="bg-white shadow rounded-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Delete Contact</h2>

        <p class="text-lg text-gray-700 mb-8">
            Do you really want to delete <strong>@Model.Firstname @Model.Lastname</strong>?
        </p>

        <form asp-controller="Contacts" asp-action="Delete" method="post">
            <input type="hidden" asp-for="ContactId" />
            <div class="flex gap-3">
                <button type="submit" class="cursor-pointer bg-gray-900 hover:bg-gray-800 text-white font-semibold py-2 px-6 rounded transition">
                    Yes
                </button>
                <a asp-controller="Contacts" 
                   asp-action="Details" 
                   asp-route-id="@Model.ContactId" 
                   asp-route-slug="@Model.Slug" 
                   class="cursor-pointer bg-gray-200 hover:bg-gray-300 text-gray-900 font-semibold py-2 px-6 rounded transition inline-block">
                    No
                </a>
            </div>
        </form>
    </div>
</div>