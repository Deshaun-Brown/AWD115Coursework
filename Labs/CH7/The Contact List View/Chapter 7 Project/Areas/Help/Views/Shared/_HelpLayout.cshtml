@{
    Layout = "_Layout";

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();

    string TabClasses(bool isActive) => isActive
        ? "-mb-px inline-block rounded-t border border-slate-200 border-b-white bg-white px-3 py-2 text-sm text-slate-900"
        : "inline-block px-3 py-2 text-sm text-blue-600 hover:text-blue-800";
}


@section Header {
    @RenderSection("Header", required: true)
}


@section Scripts {
    @RenderSection("Scripts", required: false)
}


<div class="mt-4 border-b border-slate-200">
    <a class="@TabClasses(currentController == "Home")" asp-area="Help" asp-controller="Home" asp-action="Index">Home</a>
    <a class="@TabClasses(currentController == "Tutorial")" asp-area="Help" asp-controller="Tutorial" asp-action="Index" asp-route-id="Page1">Tutorial</a>
</div>

@RenderBody()
