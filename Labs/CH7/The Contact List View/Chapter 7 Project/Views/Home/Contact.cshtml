@model IEnumerable<ContactInfo>
@{
    ViewData["Title"] = "Contact";
}

@section Header {
    <h1>Contact Page</h1>
}

<p>Here are a few ways to reach us:</p>

<div class="overflow-x-auto">
<table class="min-w-full border border-slate-200">
    <thead class="bg-slate-50">
        <tr>
            <th class="border-b border-slate-200 px-4 py-2 text-left text-sm font-semibold">Name</th>
            <th class="border-b border-slate-200 px-4 py-2 text-left text-sm font-semibold">Email</th>
            <th class="border-b border-slate-200 px-4 py-2 text-left text-sm font-semibold">Phone</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td class="border-b border-slate-200 px-4 py-2 text-sm">@c.Name</td>
            <td class="border-b border-slate-200 px-4 py-2 text-sm"><a class="text-blue-600 hover:text-blue-800" href="mailto:@c.Email">@c.Email</a></td>
            <td class="border-b border-slate-200 px-4 py-2 text-sm">@c.Phone</td>
        </tr>
    }
    </tbody>
</table>
</div>
