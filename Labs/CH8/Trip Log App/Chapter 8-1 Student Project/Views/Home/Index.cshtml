@model IEnumerable<Trip>

<p>
    <a asp-controller="Trip" asp-action="AddPage1">Add Trip</a>
</p>

@if (TempData["Message"] is string message && !string.IsNullOrWhiteSpace(message))
{
    <div class="message">@message</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var trip in Model)
    {
        <tr>
            <td>@trip.Destination</td>
            <td>@trip.StartDate.ToShortDateString()</td>
            <td>@trip.EndDate.ToShortDateString()</td>
            <td>
                @trip.Accommodation<br />
                @if (!string.IsNullOrWhiteSpace(trip.AccommodationPhone))
                {
                    <text>Phone: @trip.AccommodationPhone</text><br />
                }
                @if (!string.IsNullOrWhiteSpace(trip.AccommodationEmail))
                {
                    <text>Email: @trip.AccommodationEmail</text>
                }
            </td>
            <td>
                @if (!string.IsNullOrWhiteSpace(trip.Activity1))
                {
                    @trip.Activity1<br />
                }
                @if (!string.IsNullOrWhiteSpace(trip.Activity2))
                {
                    @trip.Activity2<br />
                }
                @if (!string.IsNullOrWhiteSpace(trip.Activity3))
                {
                    @trip.Activity3
                }
            </td>
        </tr>
    }
    </tbody>
</table>
