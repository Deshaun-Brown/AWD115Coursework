@model AddTripPage1ViewModel

<h2>Add Trip Destination and Dates</h2>

<form asp-action="AddPage1" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-row">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="form-row">
        <label asp-for="Accommodation"></label>
        <input asp-for="Accommodation" />
        <span asp-validation-for="Accommodation" class="text-danger"></span>
    </div>

    <div class="form-row">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-row">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="button-row">
        <button type="submit">Next</button>
        <a asp-action="Cancel" class="button-link">Cancel</a>
    </div>
</form>
